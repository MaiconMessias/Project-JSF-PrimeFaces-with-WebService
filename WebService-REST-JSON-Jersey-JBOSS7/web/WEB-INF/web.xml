<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://java.sun.com/xml/ns/javaee" 
		 xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
		 id="WebApp_ID" 
		 version="2.5">
  <display-name>TesteWS</display-name> <!-- Como default o nome do meu projeto, esse nome irÃ¡ aparecer na URL -->
  <servlet>
    <servlet-name>Jersey RESTful</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <!--Comentar essa linha quando usado o servidor Jboss as 7-->
<!--    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.owl.webservicerestjersey</param-value>
    </init-param> -->
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey RESTful</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <!--Parametros necessarios para o Jboss as 7-->
  <context-param>
      <param-name>resteasy.scan</param-name>
      <param-value>false</param-value>
  </context-param>
  <context-param>
      <param-name>resteasy.scan.providers</param-name>
      <param-value>false</param-value>
  </context-param>
  <context-param>
      <param-name>resteasy.scan.resources</param-name>
      <param-value>false</param-value>
  </context-param>
</web-app>
